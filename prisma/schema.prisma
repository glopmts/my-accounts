generator client {
  provider = "prisma-client"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  image         String?
  emailVerified Boolean  @default(false)
  clerkId       String?  @unique
  code          String?  @unique
  role          UserRole @default(USER)
  email         String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  ownedGroups  UserGroup[]   @relation("GroupOwner")
  memberGroups GroupMember[]

  accounts_auth     Account[]
  sessions          Session[]
  accounts          MyAccounts[]
  fixeds            Fixed[]
  archiveds         Archived[]
  sortingCategories SortingCategory[]
  userGroups        UserGroup[]
}

model Session {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  sessionToken String?  @unique
  isValid      Boolean  @default(true)
  createdAt    DateTime @default(now())
  expiresAt    DateTime
}

model Account {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  name      String
  balance   Float    @default(0)
  createdAt DateTime @default(now())
}

model EmailCode {
  id        String   @id @default(cuid())
  email     String
  code      String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

// ------------------------------------------------------------------------------------------
// My Accounts Models
// ------------------------------------------------------------------------------------------

model MyAccounts {
  id          String     @id @default(cuid())
  title       String?
  description String?
  icon        String?
  url         String?
  type        SecretType @default(OUTHER)
  notes       String?

  position        Int     @default(0)
  category        String? // 'top', 'middle', 'bottom', 'center', 'independent'
  orderInCategory Int     @default(0)

  userId    String
  user      User       @relation(fields: [userId], references: [id])
  passwords Password[]

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  fixeds           Fixed[]
  archiveds        Archived[]
  groupPermissions GroupPermission[]
}

model Password {
  id        String   @id @default(cuid())
  accountId String
  label     String
  value     String
  type      String?
  hint      String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account MyAccounts @relation(fields: [accountId], references: [id])

  @@index([accountId])
}

model SortingCategory {
  id        String   @id @default(cuid())
  name      String // 'top', 'middle', 'bottom', 'center', 'independent'
  order     Int      @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Fixed {
  id          String     @id @default(cuid())
  userId      String
  myaccountId String
  isFixed     Boolean    @default(true)
  myaccount   MyAccounts @relation(fields: [myaccountId], references: [id])
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Archived {
  id          String     @id @default(cuid())
  userId      String
  myaccountId String
  isArchived  Boolean    @default(true)
  myaccount   MyAccounts @relation(fields: [myaccountId], references: [id])
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

/// User Group
model UserGroup {
  id          String  @id @default(cuid())
  name        String
  description String?

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], name: "GroupOwner")

  members     GroupMember[]
  permissions GroupPermission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?

  @@unique([ownerId, name])
}

model GroupMember {
  id      String @id @default(cuid())
  groupId String
  userId  String

  group UserGroup @relation(fields: [groupId], references: [id])
  user  User      @relation(fields: [userId], references: [id])

  status MemberStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([groupId, userId])
}

model GroupPermission {
  id          String @id @default(cuid())
  groupId     String
  myaccountId String

  group     UserGroup  @relation(fields: [groupId], references: [id])
  myaccount MyAccounts @relation(fields: [myaccountId], references: [id])

  canView   Boolean @default(true)
  canEdit   Boolean @default(false)
  canDelete Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([groupId, myaccountId])
}

enum MemberStatus {
  PENDING
  ACTIVE
  REJECTED
}

enum SecretType {
  RESET_PASSWORD
  VERIFY_EMAIL
  API_KEY
  ENVS
  SECRETS
  ACCOUNTS
  OUTHER
}

enum UserRole {
  USER
  ADMIN
}
