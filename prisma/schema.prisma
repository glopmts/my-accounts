generator client {
  provider = "prisma-client"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String       @id @default(cuid())
  name          String?
  image         String?
  emailVerified Boolean      @default(false)
  clerkId       String?      @unique
  code          String?      @unique
  email         String       @unique
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  accounts_auth Account[]
  sessions      Session[]
  accounts      MyAccounts[]
}

model Session {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Account {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  name      String
  balance   Float    @default(0)
  createdAt DateTime @default(now())
}

model EmailCode {
  id        String   @id @default(cuid())
  email     String
  code      String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

// ------------------------------------------------------------------------------------------
// My Accounts Models
// ------------------------------------------------------------------------------------------

model MyAccounts {
  id               String            @id @default(cuid())
  title            String?
  description      String?
  icon             String?
  url              String?
  type             SecretType        @default(OUTHER)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  userId           String
  user             User              @relation(fields: [userId], references: [id])
  passwordAccounts PasswordAccount[]
}

model PasswordAccount {
  id        String   @id @default(cuid())
  username  String?
  password  String
  url       String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  myAccount   MyAccounts @relation(fields: [myAccountId], references: [id])
  myAccountId String
}

enum SecretType {
  RESET_PASSWORD
  VERIFY_EMAIL
  API_KEY
  ENVS
  SECRETS
  ACCOUNTS
  OUTHER
}
